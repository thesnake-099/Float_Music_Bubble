<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:padding="24dp"
    tools:context=".SubscriptionActivity">

    <!-- Simple back button in the top left -->
    <ImageView
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="start"
        android:padding="12dp"
        android:src="@drawable/ic_back"
        android:contentDescription="Back" />

    <TextView
        android:textColor="@color/textPrimary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Subscription Status"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginTop="0dp"/>

    <TextView
        android:textColor="@color/textSecondary"
        android:id="@+id/statusTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:textSize="18sp"
        tools:text="Current Status: Premium" />

    <ProgressBar
        android:indeterminateTint="@color/cardStroke"
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp" />

    <com.google.android.material.button.MaterialButton
        android:backgroundTint="@color/cardStroke"
        android:id="@+id/upgradeButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:paddingVertical="12dp"
        android:text="Upgrade to Premium"
        android:visibility="gone"
        tools:visibility="visible" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/restoreButton"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/cardStroke"
        android:layout_marginTop="8dp"
        android:text="Restore Purchases" />



    <LinearLayout
        android:id="@+id/premiumFeaturesLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="12dp"
        android:visibility="gone"
        tools:visibility="visible">

        <TextView
            android:textColor="@color/textPrimary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Premium Feature: Custom URL"
            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.App.TextInputLayout"
            android:layout_marginTop="16dp"
            android:hint="Custom Title (e.g., 'My News')">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/customTitleEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/Widget.App.TextInputLayout"
            android:layout_marginTop="8dp"
            android:hint="Custom URL (e.g., 'https://news.google.com')">
            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/customUrlEditText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textUri"/>
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:backgroundTint="@color/cardStroke"
                android:id="@+id/saveUrlButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Save" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clearUrlButton"
                android:textColor="@color/textSecondary"
                style="@style/Widget.MaterialComponents.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="Clear" />
        </LinearLayout>
    </LinearLayout>
    <!-- ============================================================= -->


</LinearLayout>